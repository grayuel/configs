background no
own_window no
own_window_class Conky
own_window_transparent yes
own_window_type desktop

update_interval 1
double_buffer yes
no_buffers yes
maximum_width 200

override_utf8_locale yes
default_color cccccc
use_xft yes
uppercase no

draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no

alignment tr
#gap_x 1828
gap_y 50
gap_x 20
#lua_load ~/.conky/rings.lua
#lua_draw_hook_pre main

text_buffer_size 99999

TEXT
$alignc ${offset -64}${font Cleanvertising:style=Light:size=52}${time %I:%M}${font}


${color #999999}${font Cleanvertising:style=Black:size=14}${time %B %Y}${font}  ${voffset -3}${hr 10}
${color}${voffset 6}${offset 16}${font Terminus:style=Regular:size=12}${color #cccccc}${execpi 600 cal -m| tail -n +2 | sed -e 's|'`date +%d`'|\$\{color #9E5641}'`date +%d`'\$\{color}|'}


${color #999999}${font Cleanvertising:style=Black:size=14}System  ${voffset -3}${hr 10}
${font Terminus:style=Regular:size=8} \
${color}${voffset 4}/home${alignc -20}${fs_used /home} / ${fs_size /home} $alignr ${fs_free_perc /home}%
${color #474747}${fs_bar /home}${color}

/storage${alignc -20}${fs_used /storage} / ${fs_size /storage} $alignr ${fs_free_perc /storage}%
${color #474747}${fs_bar /storage}${color}

/storage2${alignc -20}${fs_used /storage2} / ${fs_size /storage2} $alignr ${fs_free_perc /storage2}%
${color #474747}${fs_bar /storage2}${color}

/windows${alignc -20}${fs_used /windows} / ${fs_size /windows} $alignr ${fs_free_perc /windows}%
${color #474747}${fs_bar /windows}${color}


$if_mpd_playing}${font Cleanvertising:style=Black:size=14}${color #999999}Music  ${voffset -3}${hr 10}
$color${font Terminus:style:Regular:size=8}$mpd_artist - $mpd_album

$mpd_title
${color #474747}$mpd_bar$color
${mpd_status}${alignr}${mpd_elapsed}/${mpd_length}

${endif}
${font Cleanvertising:style=Black:size=14}${color #999999}Todo  ${voffset -3}${hr 10}
${font Terminus:style=Regular:size=8}${execpi 60 ~/todo.sh}
