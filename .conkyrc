background no
own_window no


update_interval 1
double_buffer yes
no_buffers yes
minimum_size 180
maximum_width 180

override_utf8_locale yes
default_color 474747
use_xft yes
uppercase no


alignment tr
gap_y 50
gap_x 20

text_buffer_size 99999
TEXT
$alignc ${offset -74}${color #AAAAAA}${font Cleanvertising:style=Light:size=52}${time %I:%M}${font}


${offset -20}${color #AAAAAA}${font Cleanvertising:style=Light:size=20}${time %B %Y}${font}  ${voffset -5}${color #52798c}${hr 1}
${color}${voffset 6}${font Terminus:style=Regular:size=12}${execpi 600 DJS=`date +%_d`; cal -s| tail -n +2 | sed s/"\(^\|[^0-9]\)$DJS"'\b'/'\1${color #52798c}'"$DJS"'${color #707070}'/}

${offset -20}${color #AAAAAA}${font Cleanvertising:style=Light:size=20}System  ${voffset -5}${color #52798c}${hr 1}
${font Terminus:style=Regular:size=8}\
${color #707070}RAM:$color $mem / $memmax

${color #707070}CPU: \
${if_match ${cpu cpu1} <= 70}$color${else}${color #ad555a}$endif \
${cpu cpu1}%\
${color #232323} |\
\
${if_match ${cpu cpu2} <= 70}$color${else}${color #ad555a}$endif \
${cpu cpu2}%\
${color #232323} |\
\
${if_match ${cpu cpu3} <= 70}$color}${else}${color #ad555a}$endif \
${cpu cpu3}%\
${color #232323} |\
\
${if_match ${cpu cpu4} <= 70}${color}${else}${color #ad555a}$endif \
${cpu cpu4}%\
${color #232323}

${color #707070}${voffset 4}/home${alignr}${fs_used /home} / ${fs_size /home}
$color${fs_bar /home}${color}

${color #707070}/storage${alignr}${fs_used /storage} / ${fs_size /storage}
$color${fs_bar /storage}${color}

${color #707070}/storage2${alignr}${fs_used /storage2} / ${fs_size /storage2}
$color${fs_bar /storage2}${color}

${color #707070}/windows${alignr}${fs_used /windows} / ${fs_size /windows}
$color${fs_bar /windows}${color}


$if_mpd_playing}${offset -20}${font Cleanvertising:style=Light:size=20}${color #AAAAAA}Music  ${voffset -5}${color #52798c}${hr 1}
$color${font Terminus:style:Regular:size=8}$mpd_album
$mpd_artist

${color #707070}$alignc$mpd_title$color
$mpd_bar
${mpd_status}${alignr}${mpd_elapsed}/${mpd_length}

${endif}
${offset -20}${font Cleanvertising:style=Light:size=20}${color #AAAAAA}Todo  ${voffset -5}${color #52798c}${hr 1}
${font Terminus:style=Regular:size=8}\
${execpi 60 ~/scripts/todo.sh}
