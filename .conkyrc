background no
own_window no



update_interval 1
double_buffer yes
no_buffers yes
minimum_size 180
maximum_width 180

override_utf8_locale yes
default_color 474747
use_xft yes
uppercase no

alignment tr
gap_y 50
gap_x 20

text_buffer_size 99999
TEXT
$alignc ${offset -74}${color #AAAAAA}${font Cleanvertising:style=Light:size=52}${time %I:%M}${font}


${offset -20}${color #AAAAAA}${font Cleanvertising:style=Light:size=20}${time %B %Y}${font}  ${voffset -5}${color #52798c}${hr 1}
${voffset 6}${font Terminus:style=Regular:size=8}${execpi 600  ~/scripts/conkycal}


$if_mpd_playing}${offset -20}${font Cleanvertising:style=Light:size=20}${color #AAAAAA}Music  ${voffset -5}${color #52798c}${hr 1}
$color${font Terminus:style:Regular:size=8}$mpd_album
$mpd_artist

${color #707070}$alignc$mpd_title$color
$mpd_bar
${mpd_status}${alignr}${mpd_elapsed}/${mpd_length}

${endif}
${offset -20}${font Cleanvertising:style=Light:size=20}${color #AAAAAA}Todo  ${voffset -5}${color #52798c}${hr 1}
${font Terminus:style=Regular:size=8}\
${execpi 60 ~/scripts/todo.sh}
